{
	"name": "fea-lsp",
	"description": "A langauge server for Adobe OpenType Feature files",
	"license": "MIT/Apache 2.0",
	"version": "0.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/cmyr/fea-rs.git",
		"directory": "fea-lsp/editors/vscode"
	},
	"categories": [],
	"engines": {
		"vscode": "^1.52.0"
	},
	"activationEvents": [
		"onLanguage:FEA"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "FEA",
				"aliases": [
					"Adobe OpenType Feature File",
					"feature"
				],
				"extensions": [
					".fea"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "fea-lsp",
			"properties": {
				"fea-lsp.server.path": {
					"type": [
						"null",
						"string"
					],
					"scope": "machine-overridable",
					"default": null,
					"markdownDescription": "Path to fea-lsp executable (currently required!)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./src --ext .ts,.tsx"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"eslint": "^7.26.0",
		"mocha": "^10.2.0",
		"typescript": "^4.3.5"
	}
}
